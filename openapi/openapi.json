{
  "openapi": "3.0.3",
  "info": {
    "title": "Finance & Zakat Manager API",
    "version": "1.0.0",
    "description": "Reference OpenAPI document for the Finance & Zakat Manager API."
  },
  "servers": [
    {
      "url": "https://localhost:8080/api/v1"
    }
  ],
  "paths": {
    "/accounts": {
      "get": {
        "summary": "List accounts",
        "responses": {
          "200": {
            "description": "Accounts retrieved"
          }
        }
      },
      "post": {
        "summary": "Create account",
        "responses": {
          "201": {
            "description": "Account created"
          }
        }
      }
    },
    "/zakat/calculate": {
      "post": {
        "summary": "Calculate zakat",
        "responses": {
          "200": {
            "description": "Calculation completed"
          }
        }
      }
    }
  }
}
